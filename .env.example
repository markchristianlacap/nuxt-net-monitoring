# PfSense Config
NUXT_SNMP_HOST=127.0.0.1
NUXT_SNMP_COMMUNITY=hello@world
NUXT_SNMP_INTERFACES=eth0,eth1

# Ping Config (supports multiple hosts separated by comma)
NUXT_PING_HOST=192.168.10.1,192.168.10.2

# DB Config
NUXT_DB_HOST=127.0.0.1
NUXT_DB_PORT=5432
NUXT_DB_USER=postgres
NUXT_DB_PASSWORD=postgres
NUXT_DB_NAME=net-monitor

# Authentication
# Note: Users are automatically saved to the database upon first login
# The default admin user is created using these credentials
NUXT_USER=admin
NUXT_PASS=secret123

# Auth Secret - Use a secure random string in production
# Generate with: openssl rand -base64 32
NUXT_AUTH_SECRET=change-this-to-a-secure-random-string-in-production

# Auth Origin - Set to your production URL
NUXT_AUTH_ORIGIN=http://localhost:3000
