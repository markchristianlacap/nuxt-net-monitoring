# Docker Compose Override Example
# Copy this file to docker-compose.override.yml and customize as needed
# docker-compose.override.yml is automatically loaded and .gitignored

services:
  app:
    # Override environment variables
    environment:
      # SNMP Configuration - Update with your actual values
      NUXT_SNMP_COMMUNITY: your-actual-snmp-community
      NUXT_SNMP_HOST: 192.168.1.1
      NUXT_SNMP_IN_OID: 1.3.6.1.2.1.2.2.1.10.5
      NUXT_SNMP_OUT_OID: 1.3.6.1.2.1.2.2.1.16.5
      
      # Ping Target
      NUXT_PING_HOST: 8.8.8.8
      
      # Database (no need to change if using the default postgres service)
      NUXT_DB_HOST: postgres
      NUXT_DB_PORT: 5432
      NUXT_DB_USER: postgres
      NUXT_DB_PASSWORD: postgres
      NUXT_DB_NAME: net-monitor
      
      # Basic Authentication - CHANGE THESE!
      NUXT_USER: admin
      NUXT_PASS: your-secure-password
    
    # Uncomment to use host network (required for local network SNMP access)
    # network_mode: host
    
    # Uncomment to add restart policy
    # restart: always
